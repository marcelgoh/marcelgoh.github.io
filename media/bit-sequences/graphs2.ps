/dot {
    1.5 0 360 arc closepath fill
} def

% x y n lettercirc draws a circle, puts string n in it
/lettercirc {
    /n exch def
    /y exch def
    /x exch def
    gsave
        0.75 setlinewidth
        /CMBX10 findfont 8 scalefont setfont
        x y r1 0 360 arc closepath
        stroke
        newpath
        x y moveto -2.25 -2.5 rmoveto
        n show
        stroke
    grestore
} def
/llettercirc {
    /n exch def
    /y exch def
    /x exch def
    gsave
        0.75 setlinewidth
        /CMBX10 findfont 8 scalefont setfont
        x y r2 0 360 arc closepath
        stroke
        newpath
        x y moveto -4.5 -2.5 rmoveto
        n show
        stroke
    grestore
} def

/arrowhead {  % x y size theta
    /theta exch def
    /s exch def
    /y exch def
    /x exch def
    /h s 2 div def
    gsave
        x y translate
        theta rotate
        newpath
            0 0 moveto
            h 0 s h s s rcurveto
            s neg s neg rmoveto
            h 0 s h neg s s neg rcurveto
        stroke
    grestore
} def

